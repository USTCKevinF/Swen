{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "随问",
  "version": "1.0.0",
  "identifier": "com.swen-app.swen",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Daemon",
        "label": "daemon",
        "visible": false,
        "additionalBrowserArgs": "--disable-web-security",
        "useHttpsScheme": true,
        "url": "../daemon.html"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost data:; img-src 'self' asset: http://asset.localhost data:; script-src 'self' 'unsafe-eval' https://unpkg.com; font-src 'self' data: https://unpkg.com; style-src 'self' 'unsafe-inline' https://unpkg.com; connect-src 'self' https://unpkg.com",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [
        {
          "identifier": "custom-permision",
          "windows": ["*"],
          "platforms": ["macOS"],
          "permissions": [
            {
              "identifier": "http:default",
              "allow": [{ "url": "https://**" }],
              "deny": [{ "url": "https://private.tauri.app" }]
            },
            "core:window:allow-create",
            "core:window:allow-close",
            "core:window:allow-current-monitor",
            "core:window:default",
            "core:window:allow-set-focus",
            "core:webview:allow-create-webview",
            "core:webview:allow-webview-close",
            "core:webview:allow-create-webview-window",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-start-dragging",
            "core:window:allow-set-resizable",
            "core:event:default",
            "core:event:allow-listen",
            "core:path:allow-resolve-directory",
            "core:path:default",
            "store:allow-load",
            "store:default",
            "fs:default",
            "fs:allow-app-read",
            "global-shortcut:allow-is-registered",
            "global-shortcut:allow-register",
            "global-shortcut:allow-unregister",
            "http:allow-fetch",
            "http:default",
            "sql:default",
            "sql:allow-execute",
            "opener:allow-open-url",
            "opener:default"
          ]
        }
      ]
    }
  },
  
  "bundle": {
    "active": true,
    "copyright": "Copyright © 2025 Wenjun Feng",
    "targets": "all",
    "resources": ["resources/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: Wenjun Feng (B6BFDS7FVC)"
    }
  }
}
